#!/bin/sh
wget https://github.com/downloads/apigen/apigen/ApiGen-2.8.0-standalone.zip --no-check-certificate
unzip -o ApiGen-2.8.0-standalone.zip
rm ApiGen-2.8.0-standalone.zip
php -dopen_basedir=/ apigen/apigen.php --source src/ --extensions inc --destination build/result/docs/ --template-config apigen/templates/bootstrap/config.neon
rm -rf apigen
